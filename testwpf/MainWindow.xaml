<Controls:MetroWindow x:Class="testwpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:testwpf"
        mc:Ignorable="d"
        Title="Хочу спать" 
        Height="578" 
        Width="782"
        
        MinHeight="400"
        MinWidth="400"
                      
        StateChanged="OnStateChanged"
                      Foreground="LightGreen" Background="#2199BD"
                      >

    <Grid Margin="0,0,2,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="84"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid Name="DataGrid1"
                  AutoGenerateColumns="False"
                  Margin="20,21,26,28" RenderTransformOrigin="0.5,0.5" Grid.Row="1">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-1.39"/>
                    <TranslateTransform/>
                </TransformGroup>
            </DataGrid.RenderTransform>

            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Name" Binding="{Binding name}"/>
                <DataGridTextColumn Width="*" Header="Url" Binding="{Binding url}"/>
                <DataGridTextColumn Width="100" Header="Price" Binding="{Binding price}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Controls:ProgressRing Name="ProgressRing" IsActive="True" Margin="125,78,125,64" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="140" Height="140" Grid.Row="1" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="351*"/>
                <ColumnDefinition Width="337*"/>
            </Grid.ColumnDefinitions>


            <Controls:RangeSlider Background="White" Margin="23,58,32,5" RenderTransformOrigin="0.5,0.5">
                <Controls:RangeSlider.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-1.783"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Controls:RangeSlider.RenderTransform>
            </Controls:RangeSlider>

            <TextBox Name="Prod" Height="27" Margin="22,21,32,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" KeyDown="Prod_KeyDown" Style="{DynamicResource SearchMetroTextBox}">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-1.57"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>

            <ComboBox Name="CB" Height="26" Margin="13,21,26,0" VerticalAlignment="Top" SelectionChanged="CB_SelectionChanged" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
                <ComboBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="2.606"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ComboBox.RenderTransform>
            </ComboBox>

            <Label Content="Категория" HorizontalAlignment="Left" Height="26" Margin="23,39,0,0" VerticalAlignment="Top"  RenderTransformOrigin="0.248,0.691" Grid.Column="1" Width="66">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="3.453"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>

        </Grid>




    </Grid>
</Controls:MetroWindow>
